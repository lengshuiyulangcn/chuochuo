<%=form_for @user,  :html => {:multipart => true}  do |f|%>
	<div class="box">
		<div><%=image_tag @user.icon, :style=>"width: 100px;"%>
	<%=f.file_field :icon%>
       </div>
		<p><%=f.label "自我介绍"%>
	<%=f.text_area :bio%></p>
	<p><%=f.label "扣扣号码"%>
<%=f.text_field :qq%></p>
<%=f.submit "提交", :class=>"btn btn-info"%>
	</div>
<%end%>
