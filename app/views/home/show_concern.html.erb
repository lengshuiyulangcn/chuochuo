<ul class="breadcrumb"> 
	<li><%=link_to "首页", root_path%></li>
	<li>参与</li>
	</ul>   
<div class="topicbox">
	<center><%=@user.username%>参与的(个人进度)</center>
	<%@passages.each do |passage|%>
		<div class="topics">
			<div class="topic topic_line">
				<div class="pull-left avatar">
			                <%=link_to image_tag(passage.user.icon.thumb),user_path(passage.user.id)%>
				</div>
				<%mypercent=passage.user_percentage(@user.id)%>
				<div class="title"><%=link_to passage.title, passage_path(passage.id)%>
				<%=link_to passage.comments.size, passageComment_path(passage.id), :class=>"badge pull-right"%>
			</div>
				          <div class="progress progress-info pull-right" style="width: 20%">
					<div class="progress-bar progress-bar-success" style="width: <%=mypercent%>%;"><%=mypercent%>%</div>
					  </div>
				<div class="otherinfo">
			投稿人:<%=passage.user.username%>
		最后更新：<%= timeago_tag passage.last_translated_at, :nojs => true, :limit => 10.days.ago, :lang=>:zh %>
		    标签:<%passage.my_tags.each do |tag|%>
		    <%=link_to tag.content, tag_path(tag.id)%>
		<%end%>
		       </div>
		    </div>
	    </div>

    <%end%>
    <div class="flickr_pagination">
	                <%= will_paginate @passages %>
			            </div>
</div>
